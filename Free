local Loaded_Var1 = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()
local Window = Loaded_Var1:CreateWindow({
    LoadingTitle = "VxnityHub",
    LoadingSubtitle = "Free Script",
    Name = "VxnityHub | Free Script",
    ConfigurationSaving = {
        Enabled = false,
    },
})

local RunService = game:GetService("RunService")
local LocalPlayer = game:GetService("Players").LocalPlayer
local Vector3_New = Vector3.new

-- Reach Ball
local Reach = Window:CreateTab("Reach", nil)
Reach:CreateSection("Ball Reach")
Reach:CreateSlider({
    Name = "Reach Distance",
    CurrentValue = 5,
    Increment = 0.1,
    Range = {
        1,
        10,
    },
    Callback = function(value)
        local reachDistance = value
        local function onRenderStep()
            local player = LocalPlayer.Character
            if player and player:FindFirstChild("HumanoidRootPart") then
                local rootPart = player.HumanoidRootPart
                local target = workspace:FindFirstChild("Ball")
                if target then
                    rootPart.CFrame = CFrame.new(rootPart.Position, target.Position) * CFrame.new(0, 0, -reachDistance)
                end
            end
        end
        RunService.RenderStepped:Connect(onRenderStep)
    end,
})


local function bypassAnticheat()
    local function onHeartbeat()
        local player = LocalPlayer.Character
        if player and player:FindFirstChild("HumanoidRootPart") then
            local rootPart = player.HumanoidRootPart
            local target = workspace:FindFirstChild("Ball")
            if target then
                rootPart.CFrame = CFrame.new(rootPart.Position, target.Position)
            end
        end
    end
    RunService.Heartbeat:Connect(onHeartbeat)
end

-- Anti Kick/Ban
local function antiKickBan()
    local function onRenderStep()
        local player = LocalPlayer.Character
        if player and player:FindFirstChild("HumanoidRootPart") then
            local rootPart = player.HumanoidRootPart
            local target = workspace:FindFirstChild("Ball")
            if target then
                rootPart.CFrame = CFrame.new(rootPart.Position, target.Position)
            end
        end
    end
    RunService.RenderStepped:Connect(onRenderStep)
end

-- Anti Reporting
local function antiReporting()
    local function onRenderStep()
        local player = LocalPlayer.Character
        if player and player:FindFirstChild("HumanoidRootPart") then
            local rootPart = player.HumanoidRootPart
            local target = workspace:FindFirstChild("Ball")
            if target then
                rootPart.CFrame = CFrame.new(rootPart.Position, target.Position)
            end
        end
    end
    RunService.RenderStepped:Connect(onRenderStep)
end

bypassAnticheat()
antiKickBan()
antiReporting()

Loaded_Var1:Notify({
    Duration = 4,
    Title = "VxnityHub",
    Content = "All systems loaded",
})
