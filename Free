local ReachBall = Window:CreateTab("Reach Ball", nil)
ReachBall:CreateToggle({
    CurrentValue = false,
    Name = "Enable Reach Ball",
    Callback = function(state)
        if state then
            local function onRenderStep()
                local player = LocalPlayer.Character
                if player and player:FindFirstChild("HumanoidRootPart") then
                    local rootPart = player.HumanoidRootPart
                    local target = workspace:FindFirstChild("Ball")
                    if target then
                        rootPart.CFrame = CFrame.new(rootPart.Position, target.Position)
                    end
                end
            end
            RunService.RenderStepped:Connect(onRenderStep)
            bypassAnticheat()
        else
            RunService.RenderStepped:Disconnect(onRenderStep)
        end
    end,
})


local function bypassAnticheat()
    local function onHeartbeat()
        local player = LocalPlayer.Character
        if player and player:FindFirstChild("HumanoidRootPart") then
            local rootPart = player.HumanoidRootPart
            local target = workspace:FindFirstChild("Ball")
            if target then
                rootPart.CFrame = CFrame.new(rootPart.Position, target.Position)
            end
        end
    end
    RunService.Heartbeat:Connect(onHeartbeat)
end

Loaded_Var1:Notify({
    Duration = 4,
    Title = "VxnityHub",
    Content = "All systems loaded, Vxnity Free ScriptRunning",
})
