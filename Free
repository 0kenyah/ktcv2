local Loaded_Var1 = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()
local Window = Loaded_Var1:CreateWindow({
    LoadingTitle = "VxnityHub",
    LoadingSubtitle = "Free Script",
    Name = "VxnityHub | Free Script",
    ConfigurationSaving = {
        Enabled = false,
    },
})

local RunService = game:GetService("RunService")
local LocalPlayer = game:GetService("Players").LocalPlayer
local Vector3_New = Vector3.new


local CholoReact = Window:CreateTab("Cholo React", nil)
CholoReact:CreateToggle({
    CurrentValue = false,
    Name = "Enable Cholo React",
    Callback = function(state)
        if state then
            local function onRenderStep()
                local player = LocalPlayer.Character
                if player and player:FindFirstChild("HumanoidRootPart") then
                    local rootPart = player.HumanoidRootPart
                    local target = workspace:FindFirstChild("Ball")
                    if target then
                        rootPart.CFrame = CFrame.new(rootPart.Position, target.Position)
                    end
                end
            end
            RunService.RenderStepped:Connect(onRenderStep)
        else
            RunService.RenderStepped:Disconnect(onRenderStep)
        end
    end,
})


